<?xml version="1.0" encoding="utf-8"?>

<c:Component xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout Id="TopInfoRootLayout">
    <c:VerticalLayout CssClass="TopInfoLayout">
      <c:HorizontalLayout CssClass="TopInfoHeadingLayout">
        <c:VerticalLayout Id="TopInfoLeftButton" CssClass="TopInfoButtonLeft"
                          OnPressDown="TopInfo_LeftButton_OnPressDown" OnPressUp="TopInfo_LeftButton_OnPressUp"
                          OnClick="TopInfo_LeftButton_OnClick" />
        <c:VerticalLayout Id="TopInfoHeadingTextLayout" CssClass="TopInfoHeadingTextLayout">
          <c:TextView Id="TopInfoHeadingTextView" CssClass="TopInfoHeading" />
          <c:TextView Id="TopInfoSubHeadingTextView" CssClass="NoHeight" />
        </c:VerticalLayout>
        <c:VerticalLayout Id="TopInfoRightButton" CssClass="TopInfoButtonRight"
                          OnPressDown="TopInfo_RightButton_OnPressDown" OnPressUp="TopInfo_RightButton_OnPressUp"
                          OnClick="TopInfo_RightButton_OnClick" />
      </c:HorizontalLayout>
      <c:VerticalLayout Id="TopInfoCommentLayout" CssClass="TopInfoCommentLayout" />
      <c:VerticalLayout Id="TopInfoExtraLayout" CssClass="NoHeight" />
    </c:VerticalLayout>
    <c:VerticalLayout Id="TopInfoImageLayout" CssClass="TopInfoImageLayout" OnClick="TopInfo_Arrow_OnClick">
      <c:VerticalLayout CssClass="TopInfoEmptySpace2sp" />
      <c:Image Id="TopInfoArrowImage" Source="$GetResourceImage(topinfo_downarrow)" CssClass="TopInfoArrowDown" />
    </c:VerticalLayout>
  </c:VerticalLayout>
</c:Component>