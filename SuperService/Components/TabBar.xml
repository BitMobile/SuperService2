<?xml version="1.0" encoding="utf-8" ?>

<c:Component xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:HorizontalLayout CssClass="TabBarHL">
    
    <c:VerticalLayout CssClass="TabBarVL" Id ="VLEvents" OnClick="TabEventsButton_OnClick">
      <c:Image CssClass="TabImage" Source="Image\Events.png" Id ="ImgEvents"/>
      <c:TextView Text="#orders#" CssClass="TabTextViewNotActive" Id ="TextViewEvents"/>
    </c:VerticalLayout>
    
    <c:VerticalLayout CssClass="TabBarVL" Id ="VLBag" OnClick="TabBagButton_OnClick">
      <c:Image CssClass="TabImage" Source="Image\Bag.png" Id ="ImgBag"/>
      <c:TextView Text="#bag#" CssClass="TabTextViewNotActive" Id ="TextViewBag"/>
    </c:VerticalLayout>
    
    <c:VerticalLayout CssClass="TabBarVL" Id ="VLClients" OnClick="TabClientsButton_OnClick">
      <c:Image CssClass="TabImage" Source="Image\Clients.png" Id ="ImgClients"/>
      <c:TextView Text="#clients#" CssClass="TabTextViewNotActive" Id ="TextViewClients"/>
    </c:VerticalLayout>
    
    <c:VerticalLayout CssClass="TabBarVL" Id ="VLSettings" OnClick="TabSettingsButton_OnClick">
      <c:Image CssClass="TabImage" Source="Image\Settings.png" Id ="ImgSettings"/>
      <c:TextView Text="#settings#" CssClass="TabTextViewNotActive" Id ="TextViewSettings"/>
    </c:VerticalLayout>
    
  </c:HorizontalLayout>
</c:Component>