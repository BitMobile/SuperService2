<!--                    Text="35243.65" />-->
<!--      </c:HorizontalLayout>-->
      
    </c:VerticalLayout>
    
    <c:ScrollView Id="30bf7571ca294fcc8a4bf5f8c8e7248b" CssClass="RootScrollView">
      <c:VerticalLayout Id="27b45d9ed2d94d82a8939c4db55e6d2b" CssClass="RootLayout">

        <s:Iterator Id="sku" Value="$GetRIMList()">
          <c:VerticalLayout CssClass="SKULine">
            <c:TextView Text="$sku.Description" CssClass="UnitDescription" />
            <c:HorizontalLayout>
              <c:TextView Text="{$sku.AmountFact} x {$sku.Price}" CssClass="CountAndPricePerUnit" />
              <c:TextView CssClass="SumSKU" Text="$sku.SumFact" />
            </c:HorizontalLayout>
            <c:HorizontalLayout CssClass="Split">
              <c:TextView Text="$GetNameVAT($sku.VAT.Name)" CssClass="VATSStyle" />
            </c:HorizontalLayout>
            <c:HorizontalLine CssClass="HorizontalLineStyle" />
          </c:VerticalLayout>
        </s:Iterator>
        
      </c:VerticalLayout>
    </c:ScrollView>
    
  </c:DockLayout>
</c:Screen>