<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    <s:Push Id="serviceMaterial" Value="$GetServiceMaterialInfo()" />
    <s:Push Id="void" Value="$SetPrice($serviceMaterial.Price)" />
    <c:VerticalLayout OnClick="BackButton_OnClick">
      <c:Image CssClass="CloseButtonImage" Source="$GetResourceImage(editservicesormaterialsscreen_close)" />
    </c:VerticalLayout>
    <c:VerticalLayout CssClass="EmptySpace7sp" />
    <c:TextView CssClass="EditScreenHeader" Text="$serviceMaterial.Description" />
    <c:TextView Text="#count#" />
    <c:Button Id="RemoveButton" Text="-" OnClick="RemoveButton_OnClick" />
    <c:EditText Id="CountEditText" Text="$serviceMaterial.Count" Keyboard="numeric"
                OnLostFocus="CountEditText_OnLostFocus" />
    <c:Button Id="AddButton" Text="+" OnClick="AddButton_OnClick" />
    <c:TextView Id="PriceTitleTextView" Text="#price#" />
    <c:EditText Id="PriceEditText" Text="$serviceMaterial.Price" />
    <c:TextView Id="TotalPriceTitleTextView" Text="#total#" />
    <c:TextView Id="TotalPriceTextView" Text="$serviceMaterial.FullPrice" />
    <c:Button Text="#add#" OnClick="AddServiceMaterialButton_OnClick" />
  </c:VerticalLayout>
</c:Screen>