<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    <c:HorizontalLayout CssClass="TopLayout">
      <c:Button CssClass="TopButton" Visible="False" />
      <c:TextView Text="#finishing#" Id="HeadingTextView" CssClass="TopHeading" />
      <c:Button Text="#send#" Id="FinishButton" OnClick="FinishButton_OnClick" CssClass="TopButton" />
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="EmptySpace4sp" />
    <c:VerticalLayout CssClass="CommentLayout">
      <c:MemoEdit Placeholder="#comment...#" Id="CommentaryMemoEdit" CssClass="Comment" />
      <c:HorizontalLine CssClass="CommentEndLine" />
    </c:VerticalLayout>
    <c:HorizontalLayout CssClass="EmptySpace4sp" />
    <c:HorizontalLayout Id="WantToBuyButton" CssClass="BigButtonLayout" OnClick="WantToBuyButton_OnClick">
      <c:TextView Text="#wanttobuy#" CssClass="BigButtonTextView" />
    </c:HorizontalLayout>
    <c:MemoEdit Placeholder="#comment...#" Id="WantToBuyCommentMemoEdit" />
    <c:Button Text="#thereisaproblem#" Id="ProblemButton" OnClick="ProblemButton_OnClick" />
    <c:MemoEdit Placeholder="#comment...#" Id="ProblemCommentMemoEdit" />
  </c:VerticalLayout>
</c:Screen>