<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    <c:HorizontalLayout CssClass="TopLayout">
      <c:Button CssClass="TopButton" Visible="False" />
      <c:TextView Text="#finishing#" Id="HeadingTextView" CssClass="TopHeading" />
      <c:Button Text="#send#" Id="FinishButton" OnClick="FinishButton_OnClick" CssClass="TopButton" />
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="EmptySpace4sp" />
    <c:VerticalLayout CssClass="CommentLayout">
      <c:MemoEdit Placeholder="#comment...#" Id="CommentaryMemoEdit" CssClass="Comment" />
      <c:HorizontalLine CssClass="CommentEndLine" />
    </c:VerticalLayout>
    <c:HorizontalLayout CssClass="EmptySpace4sp" />
    <c:HorizontalLayout Id="WantToBuyButton" CssClass="BigButton" OnClick="WantToBuyButton_OnClick">
      <c:Image Id="WantToBuyImage" Source="Image\CloseEvent\Pokupka.png" CssClass="BigButtonImage" />
      <c:TextView Text="#wanttobuy#" CssClass="BigButtonTextView" />
    </c:HorizontalLayout>
    <c:VerticalLayout Id="WantToBuyCommentLayout" CssClass="NoHeight">
      <c:MemoEdit Placeholder="#comment...#" Id="WantToBuyCommentMemoEdit" CssClass="Comment" />
      <c:HorizontalLine CssClass="CommentEndLine" />
    </c:VerticalLayout>
    <c:HorizontalLayout Id="ProblemButton" CssClass="BigButton" OnClick="ProblemButton_OnClick">
      <c:Image Id="ProblemImage" Source="Image\CloseEvent\Problema.png" CssClass="BigButtonImage" />
      <c:TextView Text="#thereisaproblem#" CssClass="BigButtonTextView" />
    </c:HorizontalLayout>
    <c:VerticalLayout Id="ProblemCommentLayout" CssClass="NoHeight">
      <c:MemoEdit Placeholder="#comment...#" Id="ProblemCommentMemoEdit" CssClass="Comment" />
      <c:HorizontalLine CssClass="CommentEndLine" />
    </c:VerticalLayout>
  </c:VerticalLayout>
</c:Screen>