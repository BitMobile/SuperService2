<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:ScrollView CssClass="RootLayout">
    <c:VerticalLayout>
      <s:Include File="Components\TopInfoComponent.xml" />
      <s:Push Id="equipment" Value="$GetEquipmentInfo()" />
      <c:TextView Text="$equipment.Desctiption" CssClass="HeadingTextView" />
      <c:TextView Text="#test#" CssClass="EquipDescTextView" />
      <c:TextView Text="#PARAMETERS#" CssClass="SubHeading" />
      <s:Iterator Id="parameter" Value="$GetParameters()">
        <c:HorizontalLine />
        <c:TextView Text="$parameter.Parameter" />
        <c:TextView Text="$parameter.Value" />
      </s:Iterator>
      <c:HorizontalLine />
      <c:TextView Text="#SERVICEHISTORY#" CssClass="SubHeading" />
      <s:Iterator Id="history" Value="$GetHistory()">
        <c:HorizontalLine />
        <c:TextView Text="$history.Description" />
        <c:TextView Text="$history.Result" />
        <c:TextView Text="$history.Date" />
      </s:Iterator>
    </c:VerticalLayout>
  </c:ScrollView>
</c:Screen>