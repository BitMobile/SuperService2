<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">

  <c:DockLayout CssClass="RootLayout">

    <!-- Добавление верхней панели -->
    <s:Include File="Components\TopInfoComponent.xml" />
    <!---->

    <!-- Tap Bar-->
    <s:Include File="Components\TabBar.xml" />
   
    <!-- Список контактов -->
    <c:SwipeVerticalLayout CssClass="ClientListLayout">
      <s:Iterator Id="client" Value="$GetClients()">
        <c:VerticalLayout Id="$client.Id" onClick="ClientLayout_OnClick" CssClass="ClientItemLayout">
          <c:TextView Text="$client.Description" CssClass="ClientItemName"/>
          <c:TextView Text="$client.Address" CssClass="ClientItemAddress"/>
          <c:HorizontalLine CssClass="ClientBreaker" />
        </c:VerticalLayout>       
      </s:Iterator>
    </c:SwipeVerticalLayout>

  </c:DockLayout>

</c:Screen>