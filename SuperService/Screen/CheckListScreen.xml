<?xml version="1.0" encoding="utf-8" ?> 

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    
    <c:HorizontalLayout CssClass="TopLayout"> 
      <c:VerticalLayout Id="BackButton" CssClass="TopButton" OnClick="BackButton_OnClick">
        <c:Image Source="Image\top_back.png" CssClass="BackButton" />
      </c:VerticalLayout>
      <c:TextView Text="#clist#" CssClass="TopHeading" Id="HeadingTextView" />
    </c:HorizontalLayout>

    <c:SwipeVerticalLayout CssClass="SVLMain">
      
      <s:Iterator Id="CheckList" Value="$GetCheckList()">
        <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListItemLayout">
          
          <s:If Test="$CheckList.Required"> 
            <c:VerticalLayout CssClass="VLRequired" />
          </s:If>
          <s:Else>
            <c:VerticalLayout CssClass="VLNotRequired" />
          </s:Else>
          
          <!--<c:VerticalLayout CssClass="CheckListQuestionLayout">
            <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
              <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
            </c:HorizontalLayout>
          </c:VerticalLayout>-->
          
          <!--<c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">-->
            
            <s:If Test="$CheckList.TypeName == Snapshot"> 
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
              
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListSnapshot_OnClick">
                  <c:Image Source="Image\Photo.png" Id ="$CheckList.CheckListId"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
            
          
            <s:If Test="$CheckList.TypeName == ValList">
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
              
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.ActionId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListValList_OnClick">
                  <c:TextView Visible = "true" Text ="Не выбрано вал"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
            
          
            <s:If Test="$CheckList.TypeName == DateTime">
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
          
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListDateTime_OnClick">
                  <c:TextView Visible = "true" Text ="Не указано дата"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
            
          
            <s:If Test="$CheckList.TypeName == Boolean">
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
              
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListBoolean_OnClick">
                  <c:CheckBox Visible="true" Checked="False"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
              
          
            <s:If Test="$CheckList.TypeName == Decimal">
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
          
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListDecimal_OnClick">
                  <c:EditText Enabled = "true" Text ="dcml Не указано" Keyboard="numeric" Mask="^([0-9]*\.[0-9]+)$"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
              
            <s:If Test="$CheckList.TypeName == Integer">
              <c:VerticalLayout CssClass="CheckListQuestionLayout">
                <c:HorizontalLayout CssClass="CheckListVLQuestionLayout">
                  <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                </c:HorizontalLayout>
              </c:VerticalLayout>
                
              <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                <c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListInteger_OnClick">
                  <c:EditText Enabled = "true" Text ="int Не указано" Keyboard="numeric" Mask="^[1-9]\d*$"/>
                </c:HorizontalLayout>
              </c:VerticalLayout>
            </s:If>
            
            <s:If Test="$CheckList.TypeName == String">
              <c:VerticalLayout CssClass="CheckListStringLayout">
                <!--<c:HorizontalLayout CssClass="CheckListVLQuestionLayout">-->
                <c:TextView Text="$CheckList.Description" CssClass="CheckListDescription" />
                <c:EditText Enabled ="True" Placeholder="Введите текст.." CssClass="CheckListEditString"/>
                <!--</c:HorizontalLayout>-->
              </c:VerticalLayout>
              
              <!--<c:HorizontalLayout Id="$CheckList.CheckListId" CssClass="CheckListVLAnswerLayout" OnClick="CheckListString_OnClick">
                <c:VerticalLayout CssClass="CheckListAnswerLayout" Id ="$CheckList.CheckListId">
                  <c:TextView Visible = "true" Text ="strng"/>
                  <c:EditText Enabled = "true" Placeholder="Введите текст.."/>
                </c:VerticalLayout>
              </c:HorizontalLayout>-->
            </s:If>
            
        <!--</c:VerticalLayout>-->
            
        </c:HorizontalLayout>
        <c:HorizontalLine CssClass="CheckListBreaker" />
      </s:Iterator>
      
    </c:SwipeVerticalLayout>
  
  </c:VerticalLayout>
</c:Screen>