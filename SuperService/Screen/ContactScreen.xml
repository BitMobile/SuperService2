  <c:VerticalLayout CssClass="RootLayout">
    <s:Push Id="contact" Value="$GetContact()" />
    <c:TextView Text="Контакт" />
    <c:TextView Text="$contact.Description" />
    <c:TextView Text="$contact.Position" />
    <c:TextView Text="Телефон" />
    <c:TextView Text="$contact.Tel" />
    <c:TextView Text="Мыло" />
    <c:TextView Text="$contact.EMail" />
    <c:Button Text="Позвонить" />
    <c:Button Text="Отправить сообщение" />
    <c:Button Text="Написать письмо" />
  </c:VerticalLayout>
</c:Screen>