<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    <s:Include File="Components\TopInfoComponent.xml" />
    
    <s:Push Id="void_crutch" Value="$InitClassFields()" />
    
    <c:TextView Text="$contact.Description" CssClass="ContactDescription" />
    <c:TextView Text="$contact.Position" CssClass="Position" />
    <c:TextView Text="---" CssClass="Position" />

    <c:HorizontalLayout Id="TelGroup" CssClass="TelHL">

      <c:VerticalLayout CssClass="TelVL">
        <c:TextView Text="+7 (915) 382 - 54 - 62" CssClass="TelValEditText"/>
        <c:TextView Text="телефон" CssClass="TelTitleEditText"/>
      </c:VerticalLayout>


      <c:VerticalLayout Id="454545" CssClass="CallToClientButton" OnClick="Call_OnClick">
          <c:Image Id="CallImage" CssClass="CallImageImg" Source="$GetResourceImage(clientscreen_phone)" />
      </c:VerticalLayout>

      <c:VerticalLayout Id="454545" CssClass="CallToClientButton" OnClick="Call_OnClick">
          <c:Image Id="CallImage" CssClass="CallImageImg" Source="$GetResourceImage(clientscreen_phone)" />
      </c:VerticalLayout>     

    </c:HorizontalLayout>

    <c:HorizontalLayout Id="TelGroup" CssClass="TelHL">

      <c:VerticalLayout CssClass="TelVL">
        <c:TextView Text="+7 (915) 382 - 54 - 62" CssClass="TelValEditText"/>
        <c:TextView Text="телефон" CssClass="TelTitleEditText"/>
      </c:VerticalLayout>


      <c:VerticalLayout Id="454545" CssClass="CallToClientButton" OnClick="Call_OnClick">
        <c:HorizontalLayout CssClass="CallToClientContainer">
          <c:Image Id="CallImage" CssClass="CallImageImg" Source="$GetResourceImage(clientscreen_phone)" />
        </c:HorizontalLayout>
      </c:VerticalLayout>

    </c:HorizontalLayout>
    
    <c:Button Id="CallButton" Text="#call#" OnClick="CallButton_OnClick" />
    <c:Button Id="SendMessageButton" Text="#send_message#" OnClick="SendMessageButton_OnClick" />
    <c:Button Id="WriteLetterButton" Text="#write_letter#" OnClick="WriteLetterButton_OnClick" />
  </c:VerticalLayout>
</c:Screen>