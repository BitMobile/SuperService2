        <!--        <c:TextView Text="#task_refused#" CssClass="RefuseButtonText" />-->
        <!--        <c:VerticalLayout CssClass="FinishedRefuseButtonImageWrapper">-->
        <!--          <c:Image Source="$GetResourceImage(tasklist_notdone)" CssClass="FinishedRefuseButtonImage" />-->
        <!--        </c:VerticalLayout>-->
        <!--      </c:HorizontalLayout>-->
