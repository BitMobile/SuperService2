<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">

  <c:DockLayout CssClass="RootLayout">
    <!-- Tab Bar-->
    <s:Include File="Components\TabBarСomponent.xml" />

    <c:ScrollView CssClass="MainInfoContainer">
      <c:VerticalLayout CssClass="MainPartContainer">

        <!--Кнопка выхода-->
        <c:VerticalLayout CssClass="ExternalImageContainerExit">
          <c:HorizontalLayout CssClass="InternalImageContainerExit">
            <c:Image CssClass="ExitImage" Source="$GetResourceImage(test)" />
          </c:HorizontalLayout>
        </c:VerticalLayout>
        <!--Конец кнопки выхода-->

        <!--Информация о пользователе-->
        <c:VerticalLayout CssClass="UserInfo">
          <c:VerticalLayout CssClass="UserInitialContainer">
            <c:TextView CssClass="UserInitials" Text="Test" />
          </c:VerticalLayout>
          <c:TextView CssClass="UserFandLName" Text="Test Test" />
          <!--Толстая линия по центру-->
          <c:VerticalLayout CssClass="FatHorizontalLineLayout">
            <c:HorizontalLine CssClass="FatHorizontalLine" />
          </c:VerticalLayout>
        </c:VerticalLayout>
        <!--Конец информации о пользователе-->

        <!--Информация о компании-->
        <c:VerticalLayout>
          <!--Стрелка-->
          <c:Image />
          <!--Логотип SService-->
          <c:VerticalLayout>
            <c:HorizontalLayout>
              <c:Image />
            </c:HorizontalLayout>
          </c:VerticalLayout>
          <!--Версия-->
          <c:TextView />
          <!--Разработчик-->
          <c:TextView />
          <!--Линия-->
          <c:VerticalLayout>
            <c:HorizontalLine />
          </c:VerticalLayout>
          <!--Лого компании-->
          <c:VerticalLayout>
            <c:HorizontalLayout>
              <c:Image />
            </c:HorizontalLayout>
          </c:VerticalLayout>
          <!--Сайт компании-->
          <c:TextView />
          <!-- Лого Твиттера-->
          <c:VerticalLayuot>
            <c:Image />
          </c:VerticalLayuot>
          <!-- Лого Фейсбука -->
          <c:VerticalLayuot>
            <c:Image />
          </c:VerticalLayuot>
        </c:VerticalLayout>
        <!--Конец информации о компании-->
      </c:VerticalLayout>
    </c:ScrollView>
  </c:DockLayout>
</c:Screen>