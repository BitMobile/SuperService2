<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">

  <c:DockLayout CssClass="RootLayout">
    <!-- Tab Bar-->
    <s:Include File="Components\TabBarСomponent.xml" />

    <c:ScrollView>
      <c:VerticalLayout>

        <!--Кнопка выхода-->
        <c:VerticalLayout>
          <c:HorizontalLayout>
            <c:Image />
          </c:HorizontalLayout>
        </c:VerticalLayout>
        <!--Конец кнопки выхода-->

        <!--Информация о пользователе-->
        <c:VerticalLayout>
          <c:TextView />
          <c:TextView />
          <!--Толстая линия по центру-->
          <c:VerticalLayout>
            <c:HorizontalLine />
          </c:VerticalLayout>
        </c:VerticalLayout>
        <!--Конец информации о пользователе-->

        <!--Информация о компании-->
        <c:VerticalLayout>
          <!--Стрелка-->
          <c:Image />
          <!--Логотип SService-->
          <c:VerticalLayout>
            <c:HorizontalLayout>
              <c:Image />
            </c:HorizontalLayout>
          </c:VerticalLayout>
          <!--Версия-->
          <c:TextView />
          <!--Разработчик-->
          <c:TextView />
          <!--Линия-->
          <c:VerticalLayout>
            <c:HorizontalLine />
          </c:VerticalLayout>
          <!--Лого компании-->
          <c:VerticalLayout>
            <c:HorizontalLayout>
              <c:Image />
            </c:HorizontalLayout>
          </c:VerticalLayout>
          <!--Сайт компании-->
          <c:TextView />
        </c:VerticalLayout>
        <!--Конец информации о компании-->
      </c:VerticalLayout>
    </c:ScrollView>
  </c:DockLayout>
</c:Screen>